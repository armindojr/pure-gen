{
  "name": "pure-gen",
  "description": "Generate fake data to be used in test automation",
  "version": "2.1.1",
  "keywords": [
    "pure",
    "generator",
    "mock",
    "fake",
    "data",
    "test",
    "test automation"
  ],
  "contributors": [
    "Armindo Junior <armindo.junior05@gmail.com>"
  ],
  "homepage": "https://armindojr.github.io/pure-gen/",
  "repository": {
    "type": "git",
    "url": "https://github.com/armindojr/pure-gen.git"
  },
  "scripts": {
    "lint": "npx eslint -c ./.eslintrc ./src",
    "lint:fix": "npx eslint -c ./.eslintrc ./src --fix",
    "test": "jest",
    "test:w": "jest --watch",
    "coverage": "jest --coverage",
    "coverage:html": "jest --coverage --coverageReporters html",
    "coverage:report": "codecov"
  },
  "devDependencies": {
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "sinon": "^13.0.2"
  },
  "dependencies": {
    "colorette": "^2.0.16",
    "commander": "^9.2.0",
    "inquirer": "^8.2.2",
    "mustache": "^4.2.0",
    "randexp": "^0.5.3",
    "slugify": "^1.6.5",
    "uuid": "^8.3.2"
  },
  "bin": {
    "pure": "./bin/pure"
  },
  "license": "GPL-3.0-only",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  }
}
