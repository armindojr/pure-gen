{
  "name": "pure",
  "description": "Generate fake data to be used in test automation",
  "version": "3.0.0",
  "keywords": [
    "pure",
    "generator",
    "mock",
    "fake",
    "data",
    "test",
    "test automation"
  ],
  "contributors": [
    "Armindo Junior <armindo.junior05@gmail.com>"
  ],
  "homepage": "https://armindojr.github.io/pure-gen/",
  "repository": {
    "type": "git",
    "url": "https://github.com/armindojr/pure-gen.git"
  },
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "graph": "npx nx graph",
    "build": "npx lerna run build",
    "lint": "npx eslint -c ./.eslintrc ./packages",
    "lint:fix": "npx eslint -c ./.eslintrc ./packages --fix",
    "test": "npx lerna run test",
    "coverage": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
    "coverage:html": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage --coverageReporters html",
    "coverage:report": "codecov"
  },
  "devDependencies": {
    "lerna": "^5.5.0"
  },
  "dependencies": {},
  "license": "GPL-3.0-only",
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}
